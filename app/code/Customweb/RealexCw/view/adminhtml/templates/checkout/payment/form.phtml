<div id="realexcw-payment-form">
	<?php echo $block->getFormRenderer()->renderForm($block->getForm()) ?>
</div>

<script type="text/javascript">
require(['jquery', 'Magento_Ui/js/modal/confirm', 'Customweb_RealexCw/js/form', 'Customweb_RealexCw/js/alias'], function($, confirm, Form, Alias){
	$('#realexcw-payment-submit-button').click(function(){
		var formId = $('form[name="payment_form"]').attr('id');
		window[formId+"-validation"] = true;
		$('.realexcw_form').submit();
	});

	function getForm(url) {
        return $('<form>', {
            action: url,
            method: 'POST'
        }).append($('<input>', {
            name: 'form_key',
            value: window.FORM_KEY,
            type: 'hidden'
        }));
    }

	$('#realexcw-payment-cancel-button').click(function(){
		confirm({
			content: '<?php echo __('Are you sure you want to cancel this order?') ?>',
			actions: {
				confirm: function(){
					getForm('<?php echo $block->getCancelUrl() ?>').appendTo('body').submit();
				}
			}
		});
		return false;
	});

	var alias = new Alias('#realexcw-payment-form', {
		transactionId: '<?php echo $block->getTransaction()->getId() ?>'
	}, function(response){
		$('#realexcw-payment-form').html(response.html);
	}, '<?php echo $block->getUrl('realexcw/checkout/updateAlias') ?>');
	alias.attachListeners();
});
</script>