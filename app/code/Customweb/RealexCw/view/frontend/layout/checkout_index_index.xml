<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
	<head>
		<css src="Customweb_RealexCw::css/realexcw.css"/>
	</head>
    <body>
        <referenceBlock name="checkout.root">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="checkout" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="steps" xsi:type="array">
                                    <item name="children" xsi:type="array">
                                        <item name="billing-step" xsi:type="array">
                                            <item name="children" xsi:type="array">
                                                <item name="payment" xsi:type="array">
                                                    <item name="children" xsi:type="array">
                                                        <item name="renders" xsi:type="array">
                                                            <!-- merge payment method renders here -->
                                                            <item name="children" xsi:type="array">
                                                                <item name="realexcw-payments" xsi:type="array">
                                                                    <item name="component" xsi:type="string">Customweb_RealexCw/js/view/payment/realexcw-payments</item>
                                                                    <item name="methods" xsi:type="array">
                                                                    	
                                                                    	<item name="realexcw_creditcard" xsi:type="array">
                                                                    		<item name="isBillingAddressRequired" xsi:type="boolean">true</item>
                                                                    	</item>
                                                                    	<item name="realexcw_visa" xsi:type="array">
                                                                    		<item name="isBillingAddressRequired" xsi:type="boolean">true</item>
                                                                    	</item>
                                                                    	<item name="realexcw_mastercard" xsi:type="array">
                                                                    		<item name="isBillingAddressRequired" xsi:type="boolean">true</item>
                                                                    	</item>
                                                                    	<item name="realexcw_americanexpress" xsi:type="array">
                                                                    		<item name="isBillingAddressRequired" xsi:type="boolean">true</item>
                                                                    	</item>
                                                                    	<item name="realexcw_lasercard" xsi:type="array">
                                                                    		<item name="isBillingAddressRequired" xsi:type="boolean">true</item>
                                                                    	</item>
                                                                    	<item name="realexcw_diners" xsi:type="array">
                                                                    		<item name="isBillingAddressRequired" xsi:type="boolean">true</item>
                                                                    	</item>
                                                                    	<item name="realexcw_directdebits" xsi:type="array">
                                                                    		<item name="isBillingAddressRequired" xsi:type="boolean">true</item>
                                                                    	</item>
                                                                    	<item name="realexcw_giropay" xsi:type="array">
                                                                    		<item name="isBillingAddressRequired" xsi:type="boolean">true</item>
                                                                    	</item>
                                                                    	<item name="realexcw_paypal" xsi:type="array">
                                                                    		<item name="isBillingAddressRequired" xsi:type="boolean">true</item>
                                                                    	</item>
                                                                    </item>
                                                                </item>
                                                            </item>
                                                        </item>
                                                    </item>
                                                </item>
                                            </item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>