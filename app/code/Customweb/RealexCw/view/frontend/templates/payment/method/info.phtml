<dl class="payment-method <?php echo $block->getMethod()->getCode() ?>">
	<dt class="title">
		<?php if ($block->isShowMethodImage()) : ?>
			<div class="field payment-image">
				<img src="<?php echo $block->getViewFileUrl('Customweb_RealexCw/images/payment/method/' . $block->escapeHtml($block->getMethod()->getPaymentMethodName()) . '.png') ?>" />
			</div>
		<?php endif; ?>
		<p><?php echo $block->escapeHtml($block->getMethod()->getTitle()) ?></p>
	</dt>
	<dd class="content">
		<?php if ($block->getTransaction() && is_object($block->getTransaction()->getTransactionObject())) : ?>
			<?php if ($block->getMethod()->getPaymentMethodConfigurationValue('show_payment_id')) : ?>
				<h4><?php echo __('Payment Id') ?></h4>
				<span><?php echo $block->escapeHtml($block->getTransaction()->getTransactionObject()->getPaymentId()) ?></span>
			<?php endif; ?>

			<?php if ($block->getTransaction()->getTransactionObject()->getPaymentInformation() != null) : ?>
				<h4><?php echo __('Payment Information') ?></h4>
				<span><?php echo $block->getTransaction()->getTransactionObject()->getPaymentInformation() ?></span>
			<?php endif; ?>
		<?php endif; ?>
	</dd>
</dl>