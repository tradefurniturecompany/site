/** @var Mageplaza\DeliveryTime\Block\Order\View\DeliveryInformation $block */
$data = $block->getDeliveryInformation();
$houseSecurityCode = $data->getData('houseSecurityCode');
$deliveryComment = $data->getData('deliveryComment');
$deliveryDate = $data->getData('deliveryDate');
$deliveryTime = $data->getData('deliveryTime');
?>

<div class="box-content delivery-information">
    <?php if ($deliveryDate || $deliveryTime) : ?>
        <br><strong><?php echo __('Delivery On:') ?></strong>
        <br><span><?php echo $deliveryTime ?></span>
        <br><span><?php echo $deliveryDate ?></span>
    <?php endif; ?>

    <?php if ($houseSecurityCode) : ?>
        <br><strong><?php echo __('House Security Code:') ?></strong>
        <br><span><?php echo $houseSecurityCode ?></span>
    <?php endif; ?>

    <?php if ($deliveryComment) : ?>
        <br><strong><?php echo __('Delivery Comment:') ?></strong>
        <br><span><?php echo $deliveryComment ?></span>
    <?php endif; ?>
</div>

<script type="text/javascript">
    require(['jquery'], function ($) {
        if ($('.box-order-shipping-method').length) {
            $('.box-order-shipping-method').append($('.delivery-information'));
        }
    });
</script>
